<resources>

  <style name="AppTheme"
    parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="CoverItem" />

  <style name="CoverItem.Letter">
    <item name="android:textSize">14sp</item>
  </style>

  <style name="CoverItem.Link">
    <item name="android:textSize">14sp</item>
    <item name="android:singleLine">true</item>
  </style>

  <style name="CoverItem.Knowledge" />

  <style name="CoverItem.Knowledge.Title">
    <item name="android:textSize">16sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:singleLine">true</item>
  </style>

  <style name="CoverItem.Knowledge.Content">
    <item name="android:textSize">14sp</item>
  </style>

  <style name="ExperienceItem" />

  <style name="ExperienceItem.Title">
    <item name="android:textSize">14sp</item>
    <item name="android:singleLine">true</item>
  </style>

  <style name="ExperienceItem.Role">
    <item name="android:textSize">16sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:singleLine">true</item>
  </style>

  <style name="ExperienceItem.Date">
    <item name="android:textSize">12sp</item>
    <item name="android:singleLine">true</item>
  </style>

  <style name="ExperienceItem.Description">
    <item name="android:textSize">14sp</item>
  </style>

</resources>
